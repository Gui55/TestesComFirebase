<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.GamesListActivity">

    <ScrollView
        android:id="@+id/sv_scroll_recycler"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv_scroll_recycler"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/button_my_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha conta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_logout"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/button_add_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_my_account"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>